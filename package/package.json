{
  "name": "@zerochain/sdk",
  "version": "0.0.0",
  "description": "The Züs SDK is a JavaScript client library that provides a convenient interface for interacting with the Züs Network. It allows developers to perform various operations such as creating and managing allocations, uploading and downloading files, executing smart contracts, and more.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "LICENSE",
    "CHANGELOG.md",
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev:tsc": "tsc -w",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint:tsc": "tsc --noEmit",
    "lint:biome": "biome check ./src",
    "lint": "yarn lint:tsc && yarn lint:biome",
    "format": "biome check --write ./src"
  },
  "dependencies": {
    "jotai": "^2.11.1",
    "lodash.debounce": "^4.0.8"
  },
  "peerDependencies": {
    "react": ">= 16.8 || 18.0.0"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@biomejs/biome": "1.9.4",
    "lefthook": "^1.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "author": "Ashutosh Khanduala (@ashuvssut)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0chain/js-sdk/issues"
  },
  "homepage": "https://github.com/0chain/js-sdk#readme",
  "keywords": []
}
